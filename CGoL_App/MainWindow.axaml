<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CGoL_App"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="CGoL_App.MainWindow"
        Title="CGoL_App" WindowState="FullScreen">
    <SplitView x:Name="MainSplitView" IsPaneOpen="False">
        <SplitView.Pane>
            <StackPanel>
                <Button HorizontalAlignment="Right" VerticalAlignment="Top" 
                        Content="Collapse" FontSize="10" Margin="10 10 10 0" Click="SplitViewButton_OnClick"/>
                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Top"
                           Margin="0 0 0 100" Text="Menu" FontWeight="Bold" FontSize="20"/>
                <Border HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="200" Height="200"
                        BorderBrush="Gray" BorderThickness="2">
                    <StackPanel HorizontalAlignment="Center">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Cell size" Margin="0 10 0 0" Width="70" 
                                       VerticalAlignment="Center"/>
                            <Slider x:Name="PixelSlider" Margin="5" Width="80" Height="40" Value="2"
                                    Minimum="0" Maximum="3" TickFrequency="1" IsSnapToTickEnabled="True"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Height" Margin="0 10 0 0" Width="70" 
                                       VerticalAlignment="Center"/>
                            <Slider x:Name="HeightSlider" Margin="5" Width="80" Height="40" Value="5"
                                    Minimum="4" Maximum="7" TickFrequency="1" IsSnapToTickEnabled="True"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Width" Margin="0 10 0 0" Width="70" 
                                       VerticalAlignment="Center"/>
                            <Slider x:Name="WidthSlider" Margin="5" Width="80" Height="40" Value="6"
                                    Minimum="5" Maximum="8" TickFrequency="1" IsSnapToTickEnabled="True"/>
                        </StackPanel>
                        <Button x:Name="DimensionsButton" 
                                Margin="5" HorizontalAlignment="Center" Content="Set Dimensions" 
                                Click="DimensionsButton_OnClick"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </SplitView.Pane>
        <StackPanel >
            <Button HorizontalAlignment="Left" VerticalAlignment="Top" 
                    Content="Expand" FontSize="10" Margin="10" Click="SplitViewButton_OnClick"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10" Spacing="100">
                <TextBlock x:Name="XCoordsBlock"/>
                <TextBlock x:Name="YCoordsBlock"/>
            </StackPanel> 
            <Border BorderBrush="Gray" BorderThickness="2" VerticalAlignment="Bottom">
                    <Canvas x:Name="DisplayCanvas" Background="Black" PointerWheelChanged="DisplayCanvas_OnPointerWheelChanged" PointerPressed="DisplayCanvas_OnPointerPressed"/>
            </Border>
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Spacing="150">
                <TextBlock x:Name="IterationBlock" TextAlignment="Left"
                         HorizontalAlignment="Center" VerticalAlignment="Top" Width="120" Height="20" Margin="20"/>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="speed" Margin="5 10 5 5" VerticalAlignment="Center"/>
                    <Slider x:Name="SpeedSlider" Margin="5" Width="100" Height="40" IsDirectionReversed="True"  
                            Minimum="4" Maximum="10" TickFrequency="1" IsSnapToTickEnabled="True" 
                            ValueChanged="SpeedSlider_OnValueChanged" Value="8"/>
                </StackPanel>
                <StackPanel x:Name="ControlsPanel" Orientation="Horizontal" 
                            Height="60" Margin="5" HorizontalAlignment="Center" VerticalAlignment="Top">
                    <Button x:Name="StepButton" Content="Step" Click="StepButton_OnClick"
                            Margin="10 0"/>
                    <Button x:Name="StartButton" Content="Start" Click="StartButton_OnClick"
                            Margin="10 0"/>
                    <Button x:Name="StopButton" Content="Stop" Click="StopButton_OnClick"
                            Margin="10 0"/>
                    <Button x:Name="ResetButton" Content="Reset" Click="ResetButton_OnClick"
                            Margin="10 0"/>
                </StackPanel>
                <StackPanel x:Name="FileIoPanel" Orientation="Horizontal">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="File name" Margin="0 10 0 0" Height="20" Width="70" 
                                   VerticalAlignment="Center"/>
                        <TextBox x:Name="FileBox" Margin="5" Width="80" Height="20"/>
                    </StackPanel>
                    <Button x:Name="SaveButton" 
                            Margin="5" HorizontalAlignment="Center" Content="Save" 
                            Click="SaveButton_OnClick"/>
                    <Button x:Name="LoadButton" 
                            Margin="5" HorizontalAlignment="Center" Content="Load" 
                            Click="LoadButton_OnClick"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </SplitView>
    
</Window>
